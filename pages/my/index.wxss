.encourage {
  padding: 20rpx 30rpx;
}
.encourage-top {
  font-size: 40rpx;
  font-weight: bold;
  line-height: 100rpx;
}
.encourage-title {
  font-size: 32rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: column;
}
.encourage-title span {
  font-weight: bold;
}
.encourage-con {
  display: flex;
  flex-direction: column;
  font-size: 38rpx;
  margin-top: 20rpx;
}
.encourage-con image {
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto;
  font-weight: bold;
  margin-top: 10rpx;
  border: 1px solid #f5f5f5;
  padding: 5rpx;
}